{% extends "TroiswaBackBundle::layout.html.twig" %}

{% import "TroiswaBackBundle:Macro:functions.html.twig" as macro %}

{% block content -%}
    <h1>Category</h1>

    {{ macro.link() }}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entity.position }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        {{ macro.link(path('category'), 'Back to the list avec utilisation de macro') }}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
