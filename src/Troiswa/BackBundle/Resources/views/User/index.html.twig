{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block content -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Birthday</th>
                <th>Phone</th>
                <th>Login</th>
                <th>Address</th>
                <th>Password</th>
                <th>Activé/Désactiver</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('troiswa_back_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.password }}</td>
                <td>{% if entity.enabled == true %}OUI{% else %}NON{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('troiswa_back_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('troiswa_back_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('troiswa_back_user_activate', { 'id': entity.id }) }}">Activer/Desactiver</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('troiswa_back_user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
